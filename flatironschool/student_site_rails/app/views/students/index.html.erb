<div id="random-full-width-content" class="this-div-is-just-a-helpful-container">
  <div class="section section-services student-index">
    <div class="section-title">
      <span>Flatiron School Class 002</span>
    </div>
  </div>

  <div class="section section-blog">
    <div class="home-blog clearfix">
      <ul>

        <% @students.each do |student| %>
          <li class="home-blog-post">

            <div class="blog-thumb">
              <a href="students/<%= student.id %>">
                <img width="360" height="140" src="http://placekitten.com/360/140" class="attachment-blog-thumb wp-post-image" alt="">
              </a>
            </div>

            <div class="blog-title">
              <div class="big-comment"><h3><a href="students/<%= student.id %>"><%= student.name %></a></h3></div>
              <p class="home-blog-post-meta">Hysterical Tag Line</p>
            </div>
            <div class="clear"></div>

            <div class="excerpt">
              <p>This is an excerpt!</p>
            </div>
            <div class="clear"></div>
          </li>
        <% end %>

      </ul>
    </div>
  </div>

</div>

<br>

<%= link_to 'New Student', new_student_path %>
